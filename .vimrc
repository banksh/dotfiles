filetype plugin indent on
" show existing tab with 4 spaces width
set tabstop=4
" when indenting with '>', use 4 spaces width
set shiftwidth=4
" on presssing tab, insert 4 spaces
set expandtab

set mouse=ar mousemodel=extend

set number

set showmatch

set title

set titlestring=vim\ \ %-25.55F\ %a%r%m titlelen=80

set incsearch
set hlsearch
nnoremap <leader><space> :nohlsearch<CR>

syntax on
